<action-mappings>
	<default-handler bean="controllerGlobalDefault" />

	<module name="home">
		<handler action="login" bean="controllerHomeLogin" />
		<handler action="logout" bean="controllerHomeLogout" />
		<handler action="index" bean="controllerHomeIndex" />
	</module>

	<module name="staff">
		<handler action="skillInventory" bean="controllerStaffSkillInventory" />
