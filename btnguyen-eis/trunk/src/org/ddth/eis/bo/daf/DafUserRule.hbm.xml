<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class entity-name="org.ddth.eis.bo.daf.DafUserRule" name="org.ddth.eis.bo.daf.DafUserRule"
		table="daf_user_rule">
		<cache usage="nonstrict-read-write" />
		<composite-id>
			<key-many-to-one name="permission" lazy="false"
				entity-name="org.ddth.eis.bo.daf.DafPermission">
				<column name="pmodule" />
				<column name="paction" />
			</key-many-to-one>
			<key-many-to-one name="user" lazy="false"
				entity-name="org.ddth.eis.bo.daf.DafUser" column="uid" />
		</composite-id>
		<property name="isGlobal" column="is_global"
			type="org.ddth.hibernate.CharBooleanType" not-null="true" />
	</class>
</hibernate-mapping>