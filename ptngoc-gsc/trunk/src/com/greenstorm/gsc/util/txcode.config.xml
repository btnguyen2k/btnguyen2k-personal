<?xml version="1.0" encoding="UTF-8"?>
	<!-- Sample configuration for TXCode parser -->
<config>
	<open_tag>{</open_tag>
	<close_tag>}</close_tag>
	<auto_url>true</auto_url>
	<auto_url_max_length>50</auto_url_max_length>
	<tab_size>4</tab_size>

	<tags>
		<!-- supported tags -->
		<tag name="b" compound="yes"><!-- Bold -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>strong</html-tag>
		</tag>
		<tag name="i" compound="yes"><!-- Italic -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>em</html-tag>
		</tag>
		<tag name="u" compound="yes"><!-- Underline -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>span</html-tag>
			<html-param name="style">text-decoration: underline</html-param>
		</tag>
		<tag name="s" compound="yes"><!-- Strike -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>span</html-tag>
			<html-param name="style">text-decoration: line-through</html-param>
		</tag>
		<tag name="sub" compound="yes"><!-- Subscript -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>sub</html-tag>
		</tag>
		<tag name="sup" compound="yes"><!-- Superscript -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>sup</html-tag>
		</tag>
		<tag name="h1" compound="yes"><!-- Header:level 1 -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>h1</html-tag>
		</tag>
		<tag name="h2" compound="yes"><!-- Header:level 2 -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>h2</html-tag>
		</tag>
		<tag name="h3" compound="yes"><!-- Header:level 3 -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>h3</html-tag>
		</tag>
		<tag name="h4" compound="yes"><!-- Header:level 4 -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>h4</html-tag>
		</tag>
		<tag name="mono" compound="yes"><!-- Monospace -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<html-tag>tt</html-tag>
		</tag>
		<tag name="color" compound="yes"><!-- Color -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<param name="main" required="yes" regexp="yes">#?((?i:[0-9a-z]{6}))</param>
			<html-tag>span</html-tag>
			<html-param name="style">color: #${main[1]}</html-param>
		</tag>
		<tag name="email" compound="yes"><!-- mailto:link -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<param name="main" required="yes" />
			<param name="subject" />
			<html-tag>a</html-tag>
			<html-param name="href">${main}#{subject{?subject=${subject}}}</html-param>
		</tag>
		<tag name="url" compound="yes"><!-- href:link -->
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<param name="main" required="yes" />
			<html-tag>a</html-tag>
			<html-param name="href">${main}</html-param>
			<html-param name="target">_blank</html-param>
		</tag>
		<tag name="image"><!-- Image -->
			<class>org.ddth.txcode.tag.SimpleSingleTag</class>
			<param name="main" required="yes" />
			<param name="title" />
			<html-tag>img</html-tag>
			<html-param name="src">${main}</html-param>
			<html-param name="border">0</html-param>
			<html-param name="alt">#{title{${title}}}~{title{ }}</html-param>
			<html-param name="title">#{title{${title}}}~{title{${main}}}</html-param>
		</tag>
		<tag name="img"><!-- Image -->
			<class>org.ddth.txcode.tag.SimpleSingleTag</class>
			<param name="main" required="yes" />
			<param name="title" />
			<html-tag>img</html-tag>
			<html-param name="src">${main}</html-param>
			<html-param name="border">0</html-param>
			<html-param name="alt">#{title{${title}}}~{title{ }}</html-param>
			<html-param name="title">#{title{${title}}}~{title{${main}}}</html-param>
		</tag>
		<tag name="list" compound="yes"><!-- List -->
			<class>org.ddth.txcode.tag.List</class>
			<param name="main" regexp="yes">(?i:1|a|i)</param>
			<param name="start" regexp="yes">\d+</param>
		</tag>
		<tag name="*" parent="list,*" compound="yes"><!-- List item -->
			<class>org.ddth.txcode.tag.ListItem</class>
			<html-tag>li</html-tag>
		</tag>
		<tag name="quote" compound="yes">
			<class>org.ddth.txcode.tag.SimpleCompoundTag</class>
			<param name="main" />
			<param name="url" />
			<html-tag>blockquote</html-tag>
			<html-param name="title">#{main{${main}}}</html-param>
			<html-param name="cite">#{url{${url}}}</html-param>
		</tag>
		<tag name="code" compound="yes">
			<class>org.ddth.txcode.tag.Scah</class>
			<param name="main" />
			<param name="title" />
			<param name="tab" regexp="yes">\d+</param>
		</tag>
		<tag name="scah" compound="yes">
			<class>org.ddth.txcode.tag.Scah</class>
			<param name="main" />
			<param name="title" />
			<param name="tab" regexp="yes">\d+</param>
		</tag>
	</tags>
</config>
