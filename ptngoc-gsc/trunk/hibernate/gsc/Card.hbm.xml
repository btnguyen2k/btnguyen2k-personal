<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class entity-name="com.greenstorm.gsc.bo.Card" name="com.greenstorm.gsc.bo.Card"
		table="gsc_card">
		<cache usage="nonstrict-read-write" />
		<id name="cardId" column="cid" type="integer">
			<generator class="native">
				<!-- Note: for PostgreSQL 8.3 -->
				<param name="sequence">gsc_card_cid_seq</param>
			</generator>
		</id>

		<property name="issuedTimestamp" column="gsc_issued_timestamp"
			type="integer" />
	</class>
</hibernate-mapping>