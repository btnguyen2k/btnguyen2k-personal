<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class entity-name="org.ddth.txbb.bo.Post"
		name="org.ddth.txbb.bo.Post" table="txbb_post">
		<cache usage="nonstrict-read-write" />
		<id name="id" column="pid" type="integer">
			<generator class="native">
				<!-- Note: for PostgreSQL 8.3 -->
				<param name="sequence">txbb_post_pid_seq</param>
			</generator>
		</id>
	</class>
</hibernate-mapping>