<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class entity-name="org.ddth.txbb.bo.TopicContent" name="org.ddth.txbb.bo.TopicContent"
		table="txbb_topic_content">
		<cache usage="nonstrict-read-write" />
		<id name="id" column="tcid" type="integer">
			<generator class="native">
				<!-- Note: for PostgreSQL 8.3 -->
				<param name="sequence">txbb_topic_content_tcid_seq</param>
			</generator>
		</id>

		<property name="topicId" column="ttopic_id" type="integer"
			not-null="true" />

		<property name="order" column="torder" type="integer"
			not-null="true" />

		<property name="content" column="tcontent" type="string" />
	</class>
</hibernate-mapping>