<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class entity-name="org.ddth.txbb.bo.Member" name="org.ddth.txbb.bo.Member"
		table="txbb_member">
		<cache usage="nonstrict-read-write" />
		<id name="id" column="mid" type="integer">
			<generator class="assigned" />
		</id>

		<property name="numTopics" column="mnum_topics" type="integer"
			not-null="true" />

		<property name="numPosts" column="mnum_posts" type="integer"
			not-null="true" />

		<property name="txbbPoints" column="mtxbb_points" type="double"
			not-null="true" />

		<property name="lastvisitTimestamp" column="mlastvisit_timestamp"
			type="integer" not-null="true" />

		<property name="viewSignature" column="mview_signature"
			type="org.ddth.hibernate.CharBooleanType" not-null="true" />

		<property name="viewAvatar" column="mview_avatar"
			type="org.ddth.hibernate.CharBooleanType" not-null="true" />

		<property name="signature" column="msignature" type="string" />
	</class>
</hibernate-mapping>